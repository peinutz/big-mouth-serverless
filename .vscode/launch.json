  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/tests/test_cases"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
    "type": "node",
    "request": "launch",
    "name": "run lambda",
    "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
    "args": [
      "invoke",
      "local",
      "-f",
      "get-index",
      "--data",
      "{}"
    ]
  }]
}